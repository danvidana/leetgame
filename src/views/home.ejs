<%- include ("./partials/_header") %>


<div class="container mt-5">

    <div class="col text-center">
        <a href=/new-game/ type="button" class="btn new-game-button text-white">
            Starting new game?
        </a>
    </div>

    <div class="row text-center labels-games mt-6">
        <div class="col">
            Name
        </div>
        <div class="col">
            Time played
        </div>
        <div class="col">
            Date started
        </div>
        <div class="col">
            Last played
        </div>
    </div>

    

    <div class="card-container">
        <% for (var i =0; i < gameRecords.length; i++)  {     %>
            <a class="card btn flex-row py-2 my-2 text-center">
                <div class="col">
                    <%= gameRecords[i].title %>
                </div>
                <div class="col">
                    <%= gameRecords[i].timePlayed %>
                </div>
                <div class="col">
                    07/20/2020
                </div>
                <div class="col">
                    07/27/2020
                </div>
            </a>
            <%  }  %>



    </div>

</div>





<%- include ("./partials/_footer") %>