<%- include ("./partials/_header", {gameRecordsCount: gameRecords.length}) %>
<div class="container mt-5">

        <form class="col justify-content-center mb-5" method="POST" action="/add-game">
            <h1 class="h3 mb-3 font-weight-normal">What's the game you are going to play?</h1>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control mb-2" placeholder="Pokemon Sword, Halo 3, etc...">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" class="form-control mb-2" placeholder="Medieval-themed game developed by..." >
            <label for="genre">Genre</label>
            <input type="text" id="gameGenre" name="genre" class="form-control mb-2" placeholder="Action/RPG, Fighting..." >
            <label for="estimatedCompletionTime">Estimated completion time (in hours)</label>
            <input type="number" id="estimatedCompletionTime" name="estimatedCompletionTime" class="form-control mb-2" placeholder="16" >
            <div class="checkbox mb-3">
            </div>
            <div class="row justify-content-center text-center">
                <button href="" type="submit" class="btn new-game-button text-white">
                    Add Game
                </button>
            </div>
        </form>
</div>




<%- include ("./partials/_footer") %>